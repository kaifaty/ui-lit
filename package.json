{
  "name": "ui-lit",
  "version": "1.0.0",
  "description": "Tiny and effective UI web-components",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "browserslist": [
    "since 2022-06"
  ],
  "targets": {
    "cssgen": {
      "context": "node",
      "distDir": "./tools/dist",
      "source": "./tools/generate-css.ts",
      "includeNodeModules": true,
      "outputFormat": "commonjs"
    }
  },
  "scripts": {
    "new": "tsx tools/new-package/create.ts",
    "prettify": "prettier --write **/*.json",
    "build": "lerna run build",
    "test": "lerna run test",
    "graph": "nx graph",
    "cem": "custom-elements-manifest analyze --config ./cem.config.mjs",
    "doc:css": "npm run doc:css:build && npm run doc:css:gen",
    "doc:css:build": "parcel build --no-cache --target=cssgen --no-source-maps",
    "doc:css:gen": "node ./tools/dist/generate-css.js",
    "fix": "eslint --fix \"**/*.{ts,tsx}\""
  },
  "parcel-namer-struct": [
    {
      "type": [
        "png",
        "jpg",
        "svg"
      ],
      "dest": "./assets"
    }
  ],
  "keywords": [
    "user-interface",
    "lit-element",
    "lit",
    "UI",
    "UI kit",
    "LitElement"
  ],
  "homepage": "https://github.com/kaifaty/ui-lit/#readme",
  "bugs": {
    "url": "https://github.com/kaifaty/ui-lit/issues"
  },
  "author": "kaifaty",
  "license": "MIT",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.6",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@kaifat/utils": "^1.1.1",
    "@open-wc/testing": "^2.5.33",
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-inline-string": "^2.8.2",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@statx/lit": "^1.0.2",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.25",
    "@swc/helpers": "^0.4.12",
    "@types/clean-css": "^4.2.6",
    "@types/glob": "^8.0.1",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^8.2.2",
    "@types/qrcode": "^1.4.1",
    "custom-elements-manifest": "^2.0.0",
    "eslint": "^8.27.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-wc": "^1.3.2",
    "glob": "^8.1.0",
    "highlight.js": "^11.7.0",
    "lerna": "^6.4.1",
    "lit": "^2.6.1",
    "markdown-it": "^13.0.1",
    "microbundle": "^0.15.1",
    "minify-literals": "^0.2.0",
    "parcel": "^2.8.2",
    "parcel-namer-struct": "^1.0.0",
    "parcel-resolver-esm-exports": "^0.1.0",
    "parcel-resolver-fix-ts-esm-shit": "^0.0.1",
    "parcel-transformer-minify-literals": "^1.0.8",
    "posthtml": "^0.16.6",
    "qrcode": "^1.5.1",
    "storybook": "^6.5.13",
    "ts-lit-plugin": "^1.2.1",
    "tslib": "^2.1.0",
    "tsx": "^3.12.2",
    "uvu": "^0.5.6",
    "zx": "^7.1.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
