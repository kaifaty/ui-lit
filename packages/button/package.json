{
  "name": "@ui-wc/button",
  "version": "1.0.0",
  "private": false,
  "description": "",
  "keywords": [
    "user-interface",
    "lit-element",
    "lit",
    "UI",
    "UI kit",
    "Webcomponent UI"
  ],
  "homepage": "https://github.com/kaifaty/ui-wc/packages/button",
  "bugs": {
    "url": "https://github.com/kaifaty/ui-wc/issues"
  },
  "license": "MIT",
  "author": "kaifaty",
  "sideEffects": false,
  "type": "module",
  "main": "build/index.js",
  "source": "./src/index.ts",
  "types": "build/index.d.ts",
  "files": [
    "/dist",
    "/package.json",
    "/README.md",
    "/src"
  ],
  "scripts": {
    "build": "rimraf ./dist/ && npm run build:parcel && npm run build:types",
    "build:parcel": "parcel build --target=build",
    "build:types": "tsc",
    "demo": "parcel serve --target=demo",
    "dev": "parcel watch",
    "test": "tsx src/index.test.ts",
    "cem": "custom-elements-manifest analyze --config ./cem.config.mjs",
    "test:watch": "tsx watch src/index.test.ts"
  },
  "browserslist": [
    "last 4 chrome versions"
  ],
  "peerDependencies": {
    "@kaifat/utils": "^1.1.1",
    "@ui-wc/link": "*",
    "@ui-wc/icon": "*"
  },
  "targets": {
    "build": {
      "context": "browser",
      "distDir": "./dist/",
      "source": "./src/index.ts",
      "isLibrary": true,
      "optimize": true,
      "includeNodeModules": {
        "@kaifat/utils": false,
        "@ui-wc/link": false,
        "@ui-wc/icon": false,
        "lit": false
      },
      "outputFormat": "esmodule"
    },
    "demo": {
      "context": "browser",
      "distDir": "./dist/",
      "source": "./src/demo/index.html"
    }
  },
  "customElements": "custom-elements.json"
}
