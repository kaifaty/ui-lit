{
  "name": "@ui-wc/utils",
  "version": "1.0.0",
  "private": false,
  "description": "",
  "keywords": [
    "html-literal-minify",
    "html-literal-optimizer",
    "lit-html-optimizer",
    "lit-html-minify"
  ],
  "homepage": "https://github.com/kaifaty/ui-wc/packages/utils",
  "bugs": {
    "url": "https://github.com/kaifaty/ui-wc/issues"
  },
  "license": "MIT",
  "author": "kaifaty",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "source": "./src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/package.json",
    "/README.md",
    "/src"
  ],
  "scripts": {
    "build": "rimraf ./dist/ && npm run build:parcel && npm run build:types",
    "build:parcel": "parcel build --target=build",
    "build:types": "tsc",
    "demo": "parcel serve --target=demo",
    "dev": "parcel watch",
    "test": "tsx src/index.test.ts",
    "test:watch": "tsx watch src/index.test.ts"
  },
  "browserslist": [
    "last 4 chrome versions"
  ],
  "peerDependencies": {
    "@ui-wc/types": "*",
    "@kaifat/utils": "^1.1.1"
  },
  "targets": {
    "build": {
      "context": "browser",
      "distDir": "./dist/",
      "source": "./src/index.ts",
      "isLibrary": true,
      "includeNodeModules": {
        "@kaifat/utils": false
      },
      "optimize": true,
      "outputFormat": "esmodule"
    },
    "demo": {
      "context": "browser",
      "distDir": "./dist/",
      "source": "./src/demo/index.html"
    }
  }
}
